@model IEnumerable<GrowthDiary.Models.Post>
@using System.Web.Mvc

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form id="formPostsSearch">
    <input type="text" class="csstxt" id="searchTxt" placeholder="Search Content"/>
    <input type="text" class="csstxt" id="tagsTxt" placeholder="Search Tags"/>
    <input type="submit" class="csssubmit"/>
</form>

@*
<section class="mb-2">
