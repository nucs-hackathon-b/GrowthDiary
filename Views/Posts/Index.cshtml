<form id="formSearchBy" class="button">
    <button type="button" class="orderBtn cssbtn" order="time" desc="true"　id="btn1">Newest</button>
    <button type="button" class="orderBtn cssbtn" order="time" desc="false" id="btn2">Oldest</button>
    <button type="button" class="orderBtn cssbtn" order="like" desc="true" id="btn3">Most Liked</button>
    <button type="button" class="orderBtn cssbtn" order="like" desc="false" id="btn4">Least Liked</button>
    <button type="button" class="orderBtn cssbtn" order="comment" desc="true" id="btn5">Most Commented</button>
    <button type="button" class="orderBtn cssbtn" order="comment" desc="false" id="btn6">Least Commented</button>
</form>

<div id="postTable">
    <div class="loader" id="loadingDiv"></div>
</div>

