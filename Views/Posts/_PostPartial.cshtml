@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@using GrowthDiary.Common
@model Post
@{
}
<div>
    <div style="position: relative;">

        @if (Model.InReplyTo != null)
        {
            <div class="m-3 p-2 border border-secondary rounded bg-light">
                <p>
                    @Model.InReplyTo.Content
                </p>
            </div>
        }

        <div>@Html.DisplayFor(modelItem => Model.Content)</div>

        <div>
            @foreach (var image in Model.Images)
            {
                <img src="@image.Url" height="100" />
            }
        </div>

        <div>
            <small>
                @Html.DisplayFor(modelItem => Model.CreationTime)
                @Localizer["(Updated at {0})", Model.LastModifiedTime]
            </small>
        </div>
        <div>
            @Localizer["{0} Comments", Model.Comments]
        </div>

        <div>
            @*ここにコメントを表示したい*@
        </div>

        <form asp-controller="Posts" asp-action="Comment" id="form-create-post" enctype="multipart/form-data">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <textarea class="form-control" placeholder="enter comment..."></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-row align-items-center">
                <div class="col-auto">
                    @*<a class="btn btn-warning" id="btn-upload-image">@Localizer["Upload Image"]</a>*@
                    <input type="submit" value="Add Comment" class="btn btn-primary" />
                </div>
            </div>
            @Html.HiddenFor(m => m.InReplyToId)
        </form>


